(set-option :verbose true)
(set-option :use_locals)
(declare-const m Int)
(declare-const n Int)
(declare-const p Int)
(declare-const x Real)
(declare-const y Real)
(declare-const z Real)

(declare-const a (Array Int Real))
(declare-const b (Array Int Real))
(assert (= a b))
(assert (= (select a m) (select a n)))
(assert (= (select (store a m x) m) (select (store b n y) p)))
